name: Manual Add Booking

on:
  workflow_dispatch:
    inputs:
      booking_date:
        description: 'Date to book (YYYY-MM-DD)'
        required: true
        type: string
        default: 'YYYY-MM-DD'

jobs:
  add_booking:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18' # Specify your Node.js version

      - name: Install dependencies
        run: npm install # Or yarn install

      # If your TypeScript scripts need to be compiled first
      - name: Build TypeScript
        run: npm run build # Or your specific build command, e.g., tsc

      - name: Run Add Booking Script
        run: node dist/add-booking.js --add ${{ github.event.inputs.booking_date }}
        # If using ts-node: npx ts-node add-booking.ts --add ${{ github.event.inputs.booking_date }}